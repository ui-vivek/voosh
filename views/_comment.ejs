<li id="comment-<%= comment._id %>">
  <p>
      <% if (locals.user && locals.user.id == comment.user.id){ %>
      
      <small>
          <a class="delete-comment-button btn btn-xs btn-circle" href="/comments/destroy/<%= comment.id %>">X</a>
      </small>
      <% } %>
      <%= comment.content %>
      <br>
      <small>
          <%= comment.user.name %>
      </small>
  </p>    

</li>